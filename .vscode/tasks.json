{
    "tasks": [
        
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "--std=c++20",
                "${workspaceFolder}/cashier.cpp",
                "${workspaceFolder}/ConsoleUi.cpp",
                "${workspaceFolder}/customer.cpp",
                "${workspaceFolder}/employee.cpp",
                "${workspaceFolder}/gym.cpp",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/member.cpp",
                "${workspaceFolder}/person.cpp",
                "${workspaceFolder}/premiumMember.cpp",
                "${workspaceFolder}/trainer.cpp",
                "-o",
                "${workspaceFolder}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}